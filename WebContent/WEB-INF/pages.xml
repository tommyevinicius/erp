<?xml version="1.0" encoding="UTF-8"?>
<pages login-view-id="/login.xhtml" no-conversation-view-id="/login.xhtml"
	xmlns="http://jboss.org/schema/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd">

    <page view-id="*">
       <navigation from-action="#{identity.login()}">
			<rule if="#{identity.loggedIn}">
				<redirect view-id="/pages/home.xhtml" />
			</rule>
		</navigation>
		<navigation from-action="#{identity.logout()}">
			<rule if="#{!identity.loggedIn}">
				<redirect view-id="/login.xhtml" />
			</rule>
		</navigation>
		<navigation>
			<rule if-outcome="home">
				<end-conversation before-redirect="true" root="true"/>
				<redirect view-id="/pages/home.xhtml" />
			</rule>
			
			<rule if-outcome="usuarioManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/usuario/usuarioManter.xhtml" />
			</rule>
			
			<rule if-outcome="perfilManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/perfil/perfilManter.xhtml" />
			</rule>
			
			<rule if-outcome="fornecedorManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/fornecedor/fornecedorManter.xhtml" />
			</rule>
			
			<rule if-outcome="produtoManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/produto/produtoManter.xhtml" />
			</rule>
			
			<rule if-outcome="clienteManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/cliente/clienteManter.xhtml" />
			</rule>
			
			<rule if-outcome="lancamentoManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/lancamento/lancamentoManter.xhtml" />
			</rule>
			
			<rule if-outcome="relatorioManter">
				<end-conversation before-redirect="true" />
				<redirect view-id="/pages/relatorio/relatorioManter.xhtml" />
			</rule>
			
		</navigation>
    </page>
    
	<page login-required="true" view-id="/pages/*" />
	<page login-required="true" view-id="/resources/*" />
	<page login-required="true" view-id="/layout/*" />
	<page login-required="true" view-id="/componentes/*" />
	
    <exception class="org.jboss.seam.framework.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.EntityExistsException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Duplicate record</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.OptimisticLockException">
        <end-conversation/>
        <redirect view-id="/error.xhtml">
            <message severity="warn">Another user changed the same data, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.AuthorizationException">
        <redirect view-id="/error.xhtml">
            <message severity="error">You don't have permission to access this resource</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.NotLoggedInException">
        <redirect view-id="/login.xhtml">
            <message severity="warn">#{messages['org.jboss.seam.NotLoggedIn']}</message>
        </redirect>
    </exception>
    
    <exception class="javax.faces.application.ViewExpiredException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Your session has timed out, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.ConcurrentRequestTimeoutException" log-level="trace">
      <http-error error-code="503" />
    </exception>
     
    <exception>
        <redirect view-id="/error.xhtml">
            <message severity="error">Unexpected error, please try again</message>
        </redirect>
    </exception>
    
</pages>
